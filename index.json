{
	"openapi": "3.1.0",
	"info": {
		"title": "La Colectiva",
		"version": "1.0.0-oas3.1",
		"contact": {
			"name": "Máximo Canedo",
			"url": "http://maximocanedo.com.ar/",
			"email": "maximotomascanedo@gmail.com"
		},
		"description": "Realizar consultas y administrar horarios, y registros de La Colectiva."
	},
	"servers": [
		{
			"url": "https://colectiva.com.ar:5050",
			"description": "Servidor en línea de La Colectiva."
		},
		{
			"url": "http://localhost",
			"description": "Servidor local para pruebas."
		}
	],
	"components": {
		"securitySchemes": {
			"bearerAuth": {
				"type": "http",
				"scheme": "bearer",
				"bearerFormat": "JWT"
			}
		},
		"schemas": {
			"allOf": [
				{ "$ref": "./api/schemas/availabilities.json#/definitions" },
				{ "$ref": "./api/schemas/boats.json#/definitions" },
				{ "$ref": "./api/schemas/comments.json#/definitions" },
				{ "$ref": "./api/schemas/docks.json#/definitions" },
				{ "$ref": "./api/schemas/enterprises.json#/definitions" },
				{ "$ref": "./api/schemas/paths.json#/definitions" },
				{ "$ref": "./api/schemas/pictures.json#/definitions" },
				{ "$ref": "./api/schemas/regions.json#/definitions" },
				{ "$ref": "./api/schemas/schedules.json#/definitions" },
				{ "$ref": "./api/schemas/schemas.json#/definitions" },
				{ "$ref": "./api/schemas/users.json#/definitions" },
				{ "$ref": "./api/schemas/vote.json#/definitions" }
			]
		}
	},
	"paths": {
		"allOf": [
			{ "$ref": "./api/paths/availabilities.json#/definitions" },
			{ "$ref": "./api/paths/boats.json#/definitions" },
			{ "$ref": "./api/paths/comments.json#/definitions" },
			{ "$ref": "./api/paths/docks.json#/definitions" },
			{ "$ref": "./api/paths/enterprises.json#/definitions" },
			{ "$ref": "./api/paths/paths.json#/definitions" },
			{ "$ref": "./api/paths/pictures.json#/definitions" },
			{ "$ref": "./api/paths/regions.json#/definitions" },
			{ "$ref": "./api/paths/schedules.json#/definitions" },
			{ "$ref": "./api/paths/users.json#/definitions" }
		]
	}
}
