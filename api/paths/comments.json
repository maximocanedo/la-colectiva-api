{
  "/comments/{id}": {
    "get": {
      "description": "Obtener comentario por ID. ",
      "operationId": "getCommentById",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": {
            "$ref": "./../schemas/users.json#/OID"
          }
        }
      ],
      "responses": {
        "200": {
          "description": "Comentario obtenido. ",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "./../schemas/comments.json#/Comment"
              }
            }
          }
        },
        "404": {
          "description": "El recurso no existe.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "./../schemas/schemas.json#/GeneralError"
              }
            }
          }
        },
        "500": {
          "description": "Error interno. ",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "./../schemas/schemas.json#/GeneralError"
              }
            }
          }
        }
      }
    },
    "put": {
      "description": "Editar comentario por ID. ",
      "operationId": "editCommentById",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": {
            "$ref": "./../schemas/users.json#/OID"
          }
        }
      ],
      "security": [
        {
          "bearerAuth": []
        }
      ],
      "requestBody": {
        "content": {
          "application/json": {
            "schema": {
              "$ref": "./../schemas/comments.json#/Comment_Edit"
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "Comentario editado. ",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "./../schemas/comments.json#/Comment"
              }
            }
          }
        },
        "404": {
          "description": "El recurso no existe.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "./../schemas/schemas.json#/GeneralError"
              }
            }
          }
        },
        "500": {
          "description": "Error interno. ",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "./../schemas/schemas.json#/GeneralError"
              }
            }
          }
        }
      }
    },
    "delete": {
      "description": "Eliminar comentario por ID. ",
      "operationId": "deleteCommentById",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": {
            "$ref": "./../schemas/users.json#/OID"
          }
        }
      ],
      "security": [
        {
          "bearerAuth": []
        }
      ],
      "responses": {
        "200": {
          "description": "Comentario eliminado. "
        },
        "404": {
          "description": "El recurso no existe.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "./../schemas/schemas.json#/GeneralError"
              }
            }
          }
        },
        "500": {
          "description": "Error interno. ",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "./../schemas/schemas.json#/GeneralError"
              }
            }
          }
        }
      }
    }
  }
}